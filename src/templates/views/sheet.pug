extends ../index.pug


block content
    include ../includes/navbar.pug
    .header-banner
        img(src=require("@/images/header_casonas.jpg"))
    .sheet
        header.sheet-header
            .container-xl
                .row
                    .col-md-8
                        h1.sheet-title VISTA AL MAR Y AL GOLF - PLAYA GRANDE
                        div.d-sm-flex.mb-2
                            address.sheet-address #[i.icon-location] Formosa 150, Mar del Plata
                            span.sheet-ref LOTE EN VENTA #[strong REF# 428482]  
                    .col-md-4
                        span.sheet-price USD 890.000

        .container-xl.mt-n3
            .row
                .col-md-8
                    .sheet-carousel
